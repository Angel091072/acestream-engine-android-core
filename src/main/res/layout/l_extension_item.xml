<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/extension_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<TextView android:id="@+id/extension_item_name"
   		android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:gravity="center_vertical"
   		android:singleLine="false"
   		android:textAppearance="?android:attr/textAppearanceLarge"
   		android:minHeight="?android:attr/listPreferredItemHeight" 
   		android:text="" />
	
    <LinearLayout android:id="@+id/extension_details"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="30sp"
        android:layout_marginBottom="10dp"
    	android:orientation="vertical"
    	android:visibility="gone">
    	
        <RelativeLayout
            android:id="@+id/extension_item_desc_container"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
			<TextView android:id="@+id/extension_item_desc"
			    android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
	   			android:layout_alignParentLeft="true"
	   			android:layout_centerVertical="true"
	   			android:textAppearance="?android:attr/textAppearanceSmall"
	   			android:text="@string/extension_description" />
			<TextView android:id="@+id/extension_item_desc_value"
	   			android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
	   			android:layout_alignParentRight="true"
	   			android:layout_toRightOf="@id/extension_item_desc"
	   			android:layout_centerVertical="true"
	   			android:gravity="right"
	   			android:singleLine="false"
	   			android:text="" />
		</RelativeLayout>
        <RelativeLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
			<TextView android:id="@+id/extension_item_issued_by"
			    android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
	   			android:layout_alignParentLeft="true"
	   			android:layout_centerVertical="true"
	   			android:textAppearance="?android:attr/textAppearanceSmall"
	   			android:text="@string/extension_issued_by" />
			<TextView android:id="@+id/extension_item_issued_by_value"
	   			android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
	   			android:layout_alignParentRight="true"
	   			android:layout_toRightOf="@id/extension_item_issued_by"
	   			android:layout_centerVertical="true"
	   			android:gravity="right"
	   			android:singleLine="false"
	   			android:text="" />
		</RelativeLayout>
		<RelativeLayout
            android:id="@+id/extension_item_url_container"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
			<TextView android:id="@+id/extension_item_url"
			    android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
	   			android:layout_alignParentLeft="true"
	   			android:layout_centerVertical="true"
	   			android:textAppearance="?android:attr/textAppearanceSmall"
	   			android:text="@string/extension_url" />
			<TextView android:id="@+id/extension_item_url_value"
	   			android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
	   			android:layout_alignParentRight="true"
	   			android:layout_centerVertical="true"
	   			android:gravity="right"
	   			android:text="" />
		</RelativeLayout>
		<RelativeLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
			<TextView android:id="@+id/extension_item_enabled"
			    android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
	   			android:layout_alignParentLeft="true"
	   			android:layout_centerVertical="true"
	   			android:textAppearance="?android:attr/textAppearanceSmall"
	   			android:text="@string/extension_enabled" />
			<TextView android:id="@+id/extension_item_enabled_value"
	   			android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
	   			android:layout_alignParentRight="true"
	   			android:layout_toRightOf="@id/extension_item_enabled"
	   			android:layout_centerVertical="true"
	   			android:gravity="right"
	   			android:text="" />
		</RelativeLayout>
		<RelativeLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
			<TextView android:id="@+id/extension_item_valid_from"
			    android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
	   			android:layout_alignParentLeft="true"
	   			android:layout_centerVertical="true"
	   			android:textAppearance="?android:attr/textAppearanceSmall"
	   			android:text="@string/extension_valid_from" />
			<TextView android:id="@+id/extension_item_valid_from_value"
	   			android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
	   			android:layout_alignParentRight="true"
	   			android:layout_toRightOf="@id/extension_item_valid_from"
	   			android:layout_centerVertical="true"
	   			android:gravity="right"
	   			android:text="" />
		</RelativeLayout>
		<RelativeLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
			<TextView android:id="@+id/extension_item_valid_to"
			    android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
	   			android:layout_alignParentLeft="true"
	   			android:layout_centerVertical="true"
	   			android:textAppearance="?android:attr/textAppearanceSmall"
	   			android:text="@string/extension_valid_to" />
			<TextView android:id="@+id/extension_item_valid_to_value"
	   			android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
	   			android:layout_alignParentRight="true"
	   			android:layout_toRightOf="@id/extension_item_valid_to"
	   			android:layout_centerVertical="true"
	   			android:gravity="right"
	   			android:text="" />
		</RelativeLayout>
    </LinearLayout>

</LinearLayout>
